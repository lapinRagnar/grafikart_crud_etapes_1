<h1>Modifier la catégorie</h1>

<%= form_for @category do |f| %>

    <div class="form-group">
        <%= f.text_field :name, placeholder: 'Nom de la catégorie', class: 'form-control'%>      
    </div>

    <div class="form-group">
        <%= f.text_field :slug, placeholder: 'url de la catégorie', class: 'form-control'%>      
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Modifier</button>
    </div>


<% end %>

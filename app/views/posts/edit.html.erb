<h1>Editer l'article : <%= @post.name %> </h1>

<%= form_for @post do |f| %>

    <div class="form-group">
        <label> Titre de l'article </label>
        <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
        <label>Contenu de l'article</label>
        <%= f.text_area :contect, class: 'form-control' %>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-secondary">Modifier l'article</button>
    </div>

<% end %>